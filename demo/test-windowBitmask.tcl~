 #!/bin/sh
 # the next line restarts using tclsh \
 exec tclsh "$0" "$@"

package require Gnocl


set win [gnocl::window \
    -onDelete exit \
    -borderWidth 1 \
    -defaultWidth 640\
    -defaultHeight 480 \
    -backgroundImage gnocl_logo.png \
    -mask gnocl_logo.png \
    -opacity 0.5  \
    -tooltip "Click MB-1 to Close" \
    -decorated 0 \
    -onButtonRelease { exit}
    ]

$win center

gnocl::mainLoop
